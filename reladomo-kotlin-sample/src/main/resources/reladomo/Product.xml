<?xml version="1.0" encoding="UTF-8" ?>
<MithraObject objectType="transactional">
    <PackageName>io.github.reladomokotlin.sample.domain</PackageName>
    <ClassName>Product</ClassName>
    <DefaultTable>PRODUCTS</DefaultTable>
    
    <Attribute name="productId" javaType="long" columnName="PRODUCT_ID" primaryKey="true" primaryKeyGeneratorStrategy="SimulatedSequence">
        <SimulatedSequence sequenceName="PRODUCT_SEQ" hasSourceAttribute="false" sequenceObjectFactoryName="io.github.reladomokotlin.springboot.sequence.GenericSequenceObjectFactory"/>
    </Attribute>
    <Attribute name="name" javaType="String" columnName="NAME" maxLength="100" nullable="false"/>
    <Attribute name="description" javaType="String" columnName="DESCRIPTION" maxLength="500" nullable="true"/>
    <Attribute name="price" javaType="BigDecimal" columnName="PRICE" scale="2" precision="10" nullable="false"/>
    <Attribute name="stockQuantity" javaType="int" columnName="STOCK_QUANTITY" nullable="false"/>
    <Attribute name="category" javaType="String" columnName="CATEGORY" maxLength="50" nullable="true"/>
    
    <Relationship name="orderItems" relatedObject="OrderItem" relatedIsDependent="false" cardinality="one-to-many">OrderItem.productId = this.productId</Relationship>
</MithraObject>